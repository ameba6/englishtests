.mainNav-section
	flex 1 0 auto
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-end
	min-height 100%

.mainNav-menu 
	flex 1 0 fit-content
	margin 0 0 10px 0
	& .mainNav-ul
		list-style  none
		display flex
		flex-direction row
		padding  1% 10%
		background  linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.6))
		border-radius: 200px;
		& li + li 
			margin-left 20px
		& a 
			text-decoration none
			border-bottom 2px solid transparent
			color $light-gray

	.mainNav-Item
		position relative
		padding 2px 5px 5px 5px
		border-width 0 0 3px 0
		&:after
			display block;
			position absolute;
			left 0px
			bottom 0px;
			width 0;
			height 3px;
			background  linear-gradient(to right, $bright-blue 60%, transparent 100%);
			content "";
			trans(0.2s)
		&:hover 
			cursor pointer
		&:hover:after
			width 100%
			left 0px