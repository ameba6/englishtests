.main-nav 
	ul 
		position relative
		top 15px
		list-style  none
		display  flex
		padding  2% 10%
		margin-left 0px
		background  -moz-linear-gradient(top, rgba(0,0,0,0.2), rgba(0,0,0,0.6))
		border-radius: 200px;
	li + li 
		margin-left 20px
	a 
		text-decoration none
		border-bottom 2px solid transparent
		color $light-grey
	.mainNav-Item
		position relative
		bottom 0px
		padding 10px 5px 0 5px
		border-width 0 0 3px 0
		&:after
			display block;
			position absolute;
			left 0px
			bottom -3px;
			width 0;
			height 3px;
			background  -moz-linear-gradient(left, $bright-blue 60%, transparent 100%);
			content "";
			trans(0.2s)
		&:hover 
			cursor pointer
		&:hover:after
			width 100%
			left 0px