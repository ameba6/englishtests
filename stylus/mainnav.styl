.main-nav 
	ul 
		list-style: none
		display: flex
		padding: 0 
	li + li 
		margin-left: 20px
	a 
		text-decoration: none
		border-bottom: 2px solid transparent
		color $deep-grey
	.mainNav-Item
		position relative
		top 10px
		padding 10px 5px 0 5px
		border-width 0 0 3px 0
		&:after
			display: block;
			position: absolute;
			left: 0px
			bottom: -3px;
			width: 0;
			height: 3px;
			background: -moz-linear-gradient(left, $bright-blue 60%, transparent 100%);
			content: "";
			trans(0.2s)
		&:hover 
			cursor pointer
		&:hover:after
			width:100%
			left: 0px