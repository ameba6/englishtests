.admin-menu
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	& .my-ul
		padding 0
		width 100%
		list-style none
	& li
		margin 0
		padding 0

	& .active
		background-color $active-blue
		color $light-gray
		&:hover
			background-color $active-blue
			color $light-gray
	& a
		outline 0
		text-decoration none
		padding 10px 10px
		color $gray-text
		display flex
		&:hover
			background $black
			color $bright-blue
		

	& i
		display block
		width 40px
	& .AdNav-text
		display inline
		padding 0 0 0 0px