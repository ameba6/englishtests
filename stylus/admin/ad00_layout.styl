
.admin-layout
	display flex
	min-height 100vh
	flex-direction column
	color $deep-grey

	.admin-header
		flex 0 0 2rem
		order 1
		min-width 100vw
		display flex
		flex-direction row
		justify-content center
		align-items center
		background-color $light-black
		border-bottom 1px solid $deep-grey
		color $light-grey
		
	.admin-footer
		display none
		flex 0 0 2rem
		order 3

	.admin-body
		flex 1 0 auto
		order 2
		display flex
		flex-direction row
		background-color $light-grey
		
		.admin-content
			order 2
			display flex
			flex-direction column
			justify-content flex-start
			align-items flex-start
			width 100vw

		.admin-ads
			display none
			flex 0 0 12rem
			order 3
		
		.admin-nav
			flex 1 0 $side-nav-large
			order 1
			display flex
			flex-direction column
			justify-content flex-start
			background-color $light-black